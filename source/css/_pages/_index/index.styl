.post
  @media (min-width 768px)
    padding-top 45px
  .post-item
    margin-bottom 30px
    .post-wrap:hover
      box-shadow $color-shadow-active
    .post-wrap
      box-shadow $color-shadow
      background-color var(--color-background)
      .post-top
        z-index 10
        width 80px
        height 80px
        overflow hidden
        position absolute
        top 0
        div
          line-height 18px
          text-align center
          -webkit-transform rotate(-45deg)
          -moz-transform rotate(-45deg)
          -ms-transform rotate(-45deg)
          -o-transform rotate(-45deg)
          position relative
          padding 3px 0
          top 10px
          left -28px
          width 100px
          background-color $color-link
          background-image $color-link-gradient
          color #ffffff
          box-shadow -3px 5px 6px -5px rgba(0, 0, 0, 0.5)
      .post-image
        display block
        position relative
        width 100%
        height 0
        padding-bottom 66%
        img
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          overflow hidden
          object-fit cover
          &, &:hover
            transition $transition
          &:hover
            filter grayscale(100%)
            // opacity 0.7
      .post-content
        position relative 
        padding 20px
        height 180px
        &-wrap
          height 110px
          overflow hidden
        .post-title
          font-size 1.5em
          a
            display -webkit-box
            -webkit-box-orient vertical
            -webkit-line-clamp 2
            overflow hidden
        .post-excerpt
          p
            color var(--color-text-secondary)
            if (hexo-config('indent.excerpt'))
              text-indent unquote(hexo-config('indent.excerpt'))
        .post-info
          position absolute
          bottom 20px
          color var(--color-text-third)
          .post-info-item
            margin-right 10px
            i
              font-size 1em
              margin-right 5px